<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayank.dipperinternship.About">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dipper Internship App"
            android:typeface="serif"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:id="@+id/inte"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEATURES"
            android:paddingTop="10dp"
            android:layout_below="@+id/inte"
            android:typeface="serif"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:id="@+id/fet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n1.Get data from the server and update the UI.\n2.Have a “call to” feature.\n3.GCM notification/FCM Notification\n4.Google Login+Firebase Login\n5.Send location after every 15 minutes.\n6.Crashlytics added to the app.\n7.Google Firebase Analytics added to the app.\n8.Material design added accordingly."

            android:id="@+id/wf"
            android:layout_below="@id/fet"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GitHub:\nhttps://github.com/mayankagg9722/DipperInternship"
            android:layout_below="@+id/image"
            android:id="@+id/git"
            android:layout_marginTop="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPER"
        android:typeface="serif"
            android:paddingTop="10dp"
            android:textSize="30dp"
            android:id="@+id/text"
            android:layout_below="@+id/wf"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypicture"
            android:id="@+id/image"
            android:layout_below="@+id/text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="Github:"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/textView"
            android:layout_above="@+id/git"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
