<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayank.dipperinternship.Signup"
    android:background="#fffde7">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sign Up With US"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="First Name"
                android:id="@+id/firstname"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:singleLine="true"
                android:id="@+id/lastname"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textWebEmailAddress"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/email"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="290dp"
                android:inputType="textWebPassword"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/password"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/eye"
                android:src="@drawable/eye"
                android:layout_gravity="right" />
        </LinearLayout>

            <EditText
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Retype-Password"
                android:id="@+id/repassword"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="signup"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/register"
                android:background="@color/myactionbarcolor"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OR"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:id="@+id/textView3"
        android:layout_above="@+id/googlelogo"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Sign up with Google"
        android:id="@+id/googlelogo"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
        android:paddingRight="20dp"
        android:textStyle="italic"
        android:background="#ffffff"
        android:layout_gravity="center"/>


</LinearLayout>
</ScrollView>
