<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mayank.dipperinternship.BookingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#40bf80">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="BOOKING"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:id="@+id/details"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CreatedAt:"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/createdat"
                        android:hint="createdat"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name"
                        android:text="Updated At:"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/updatedat"
                        android:hint="updatedAt"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#40bf80">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Information"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LoadID:"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/loadid"
                        android:hint="id"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:text="ShipperID:"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shipid"
                        android:hint="id"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:id="@+id/email"
                        android:layout_below="@+id/name"
                        android:text="Material:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:id="@+id/material"
                        android:hint="material"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:id="@+id/address"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/email"
                        android:text="TripID:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:id="@+id/truckerid"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/email"
                        android:hint="id"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#40bf80">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Details"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:typeface="serif"
                        android:textStyle="bold|italic"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading ContractorID:"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/supervisorid"
                        android:hint="id"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consigner Details:"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/consigner"
                        android:layout_marginLeft="5dp"
                        android:hint="name"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Address:"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/from"
                        android:hint="address"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consignee Details:"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/consignee"
                        android:hint="name(id)"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name"
                        android:text="Drop Address:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/to"
                        android:typeface="serif"
                        android:hint="address"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#40bf80">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:typeface="serif"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Cost"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Rate/ton:"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/yourrate"
                        android:layout_marginLeft="5dp"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"
                        android:hint="rate"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Price(INR):"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bookingprice"
                        android:layout_marginLeft="5dp"
                        android:typeface="serif"
                        android:hint="price"
                        android:inputType="number"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name"
                        android:text="Total Rate:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/totalrate"
                        android:hint="totalrate"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name"
                        android:text="Payment Status:"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/payment"
                        android:hint="status"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle/Driver Details"
            android:typeface="sans"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:drawableRight="@drawable/ic_menu_send"
            android:textStyle="bold"
            android:background="#40bf80"
            android:id="@+id/vehicle"/>

    </LinearLayout>

</ScrollView>
